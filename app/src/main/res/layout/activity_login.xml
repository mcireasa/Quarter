<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/ImgMainLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        app:srcCompat="@drawable/firefox" />

    <EditText
        android:id="@+id/TextUsername"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="227dp"
        android:layout_marginEnd="32dp"
        android:background="#d2d4ef"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/TextPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/TextUsername"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="279dp"
        android:background="#d2d4ef"
        android:ems="10"
        android:hint="Password
"
        android:inputType="textPassword"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/ImgIconUser"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/TextUsername"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        app:srcCompat="@drawable/ic_action_name" />

    <ImageView
        android:id="@+id/ImgIconPass"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/TextPassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/ic_action_lock" />

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="187dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/ImgIconPass">

            <Button
                android:id="@+id/btnLogim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/cardview_light_background"
                android:textSize="12sp"
                android:textColor="#2121b1"
                android:onClick="OnClikLoginBtn"
                android:text="Login" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/ForgotPassText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="82dp"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:clickable="true"
        android:onClick="onClickForgotPassText"/>

</RelativeLayout>