<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:orientation="vertical"
    tools:context=".CreateTestActivity"
    tools:layout_editor_absoluteY="81dp">


    <EditText
        android:id="@+id/editText"
        android:layout_width="82dp"
        android:layout_height="1dp"
        android:ems="10"
        android:hint="Add quiz"
        android:inputType="textPersonName"
        android:textColor="#000"
        tools:layout_editor_absoluteX="151dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/active_until"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="-31dp"
        android:ems="10"
        android:hint="Quiz name: "
        android:inputType="textPersonName"
        android:textColor="#000"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="184dp" />

    <EditText
        android:id="@+id/quiz_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="111dp"
        android:ems="10"
        android:hint="Add quiz code here"
        android:inputType="textPersonName"
        android:textColor="#000"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="4dp" />

    <RadioButton
        android:id="@+id/activebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/access_code"
        android:layout_alignParentTop="true"
        android:layout_marginStart="232dp"
        android:layout_marginTop="183dp"
        android:buttonTint="#a72626"
        android:text="Active"
        android:textColor="#000"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="54dp" />

    <RadioButton
        android:id="@+id/privatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="192dp"
        android:buttonTint="#a72626"
        android:text="Private"
        android:textColor="#000"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="155dp" />

    <EditText
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/access_code"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-7dp"
        android:layout_marginTop="149dp"
        android:ems="10"
        android:hint="Category"
        android:inputType="textPersonName"
        android:textColor="#000"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="206dp" />

    <EditText
        android:id="@+id/access_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="227dp"
        android:ems="10"
        android:hint="Access code"
        android:inputType="textPersonName"
        android:textColor="#000"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="265dp" />

    <EditText
        android:id="@+id/active_until"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="168dp"
        android:ems="10"
        android:hint="Active untill"
        android:inputType="textPersonName"
        android:textColor="#000"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="113dp" />

    <EditText
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="101dp"
        android:ems="10"
        android:hint="Timer:"
        android:inputType="textPersonName"
        android:textColor="#000"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="330dp" />

    <Button
        android:id="@+id/addQ"
        android:layout_width="106dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="251dp"
        android:layout_marginBottom="17dp"
        android:onClick="onClickAddQuiz"
        android:text="Add Questions"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="404dp" />


</RelativeLayout>