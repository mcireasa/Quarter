<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionFormActivity"
    android:background="@color/albastru1">


    <EditText
        android:id="@+id/QuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:hint=" Question text"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ScoreQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QuestionText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:hint="Score"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/TimeQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ScoreQuestion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:hint="Time(seconds)"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/titleAddQuestion"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="112dp"
        android:text="Add Question"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_below="@+id/TimeQuestion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="107dp"
        android:layout_marginRight="107dp"
        android:contentDescription="buna" />

    <TextView
        android:id="@+id/type"
        android:layout_width="211dp"
        android:layout_height="35dp"
        android:layout_below="@+id/TimeQuestion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="108dp"
        android:text=" Type"
        android:textSize="17dp" />

    <Button
        android:id="@+id/nextToAddAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="253dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="32dp"
        android:onClick="add"
        android:text="Next" />

    <EditText
        android:id="@+id/nrAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="102dp"
        android:ems="10"
        android:hint="Number of answers"
        android:inputType="textPersonName" />


</RelativeLayout>
