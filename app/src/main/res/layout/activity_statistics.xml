<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsActivity"
    android:background="@color/albastru2">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="331dp"
        android:layout_height="52dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="28dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="124dp" />

    <Button
        android:id="@+id/buttonShowStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="133dp"
        android:onClick="showStat"
        android:text="@string/ButtonStatShow" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="196dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/buttonShowStat"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-42dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="81dp"
        android:text="@string/statisticTitleShow"
        android:textColor="@color/mov2"
        android:textSize="40dp" />
</RelativeLayout>